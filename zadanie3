package zadanie3;

import java.security.SecureRandom;
import java.util.Scanner;

public class Program3 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Введите желаемую длину пароля (от 8 до 12): ");
        int length = scanner.nextInt();
        if (length < 8 || length > 12) {
            System.out.println("Некорректная длина. Используем длину 8 по умолчанию.");
            length = 8;
        }

        String upper = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
        String lower = "abcdefghijklmnopqrstuvwxyz";
        String digits = "0123456789";
        String symbols = "!@#$%^&*()-_=+[]{}|;:,.<>?";

        String allChars = upper + lower + digits + symbols;
        SecureRandom random = new SecureRandom();

        StringBuilder password = new StringBuilder();

        password.append(upper.charAt(random.nextInt(upper.length())));
        password.append(lower.charAt(random.nextInt(lower.length())));
        password.append(digits.charAt(random.nextInt(digits.length())));
        password.append(symbols.charAt(random.nextInt(symbols.length())));

        for (int i = 4; i < length; i++) {
            password.append(allChars.charAt(random.nextInt(allChars.length())));
        }

        char[] Array = password.toString().toCharArray();
        for (int i = Array.length - 1; i > 0; i--) {
            int index = random.nextInt(i + 1);
            char temp = Array[index];
            Array[index] = Array[i];
            Array[i] = temp;
        }

        System.out.println("Сгенерированный пароль: " + new String(Array));
        scanner.close();
    }
}
